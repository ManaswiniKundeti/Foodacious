<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_height="wrap_content"
     android:layout_width="wrap_content"
    app:cardElevation="4dp"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    app:cardCornerRadius="10dp"
    android:id="@+id/collection_item_card_view">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/collection_item_image_view"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars"
            />

        <TextView
            android:id="@+id/collection_item_title_text_view"
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:layout_alignBottom="@+id/collection_item_image_view"
            android:background="#7000"
            android:gravity="center"
            android:shadowColor="#000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="6"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/collection_item_image_view"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/collection_item_image_view"
            app:layout_constraintTop_toTopOf="@id/collection_item_image_view"
            app:layout_constraintVertical_bias="1.0"
            tools:text="Trending this week" />

        <TextView
            android:id="@+id/collection_item_place_count_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#7000"
            android:gravity="center"
            android:shadowColor="#000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="3"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/collection_item_image_view"
            app:layout_constraintEnd_toEndOf="@+id/collection_item_title_text_view"
            app:layout_constraintStart_toStartOf="@+id/collection_item_title_text_view"
            app:layout_constraintTop_toBottomOf="@+id/collection_item_title_text_view"
            app:layout_constraintVertical_bias="0.0"
            tools:text="30 places" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>



